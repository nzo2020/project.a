<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".StorageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Firebase File Storage"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etFileContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:hint="הקלד את תוכן הקובץ כאן..."
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:background="@android:drawable/edit_text" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="העלאת קובץ טקסט לענן"
        android:onClick="uploadFile" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="הורדה והצגת קובץ"
        android:onClick="downloadFile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="תוכן הקובץ מהענן:"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:background="#f0f0f0"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תוכן הקובץ יופיע כאן..."
            android:textSize="16sp" />
    </ScrollView>

</LinearLayout>